<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <title>{% block title %}Hello Application{% endblock %}</title>
        <link type="text/css" rel="stylesheet" href="{{ asset('css/calendar.css') }}">
        <link type="text/css" rel="stylesheet" href="{{ asset('css/sample.css') }}">
        <link type="text/css" rel="stylesheet" href="{{ asset('css/style.css') }}">
        <script src="{{ asset('js/ckeditor.js') }}" type="text/javascript"></script>
        {% block headextended %}{% endblock %}
    </head>
    <body>
        {% block body %}{% endblock %}
        <script type="text/javascript">
          {% if user is defined %}
          window.username = "{{ user.getUsername() }}"
          {% endif %}
          window.currentGroup = "G1"
        </script>
        <script src="{{ asset('js/jquery-1.5.1.min.js') }}" type="text/javascript" ></script>
        <script src="{{ asset('js/jquery.tmpl.min.js') }}" type="text/javascript" ></script>
        <script src="{{ asset('js/jquery-ui-1.8.11.custom.min.js') }}" type="text/javascript" ></script>
        {% block js %}{% endblock %}
    </body>
</html>
