<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE groups SYSTEM "groups.dtd" >
<groups>
  <% 1.upto 100 do |i| -%>
    <group id="G<%= i %>">
      <name>name<%= i %></name>
      <description>(<%= i %>) <%= `fortune | xml esc`.strip %></description>
      <% 0.upto (rand() * 10).to_i do |i| -%>
      <user refuser="U<%= (rand() * 99).to_i + 1 %>" />
      <% end -%>
    </group>

  <% end -%>
</groups>

